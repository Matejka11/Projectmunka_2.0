@{
    ViewData["Title"] = "Belépés";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<header class="border-bottom bg-white sticky-top">
    <div class="container py-3">
        <div class="d-flex align-items-center gap-3">
            <a href="/Oldalak/Kezdo" class="text-decoration-none d-flex align-items-center gap-2">
                <span class="fs-3">🌺</span>
                <span class="fw-bold text-dark">Andika Vegyesbolt</span>
            </a>
            <nav class="mx-auto d-none d-md-flex gap-2 px-3 py-2 rounded-pill border shadow-sm bg-white">
                <a class="nav-link fw-semibold px-3 py-1 rounded-pill" href="/Oldalak/Kezdo">Kezdő</a>
                <a class="nav-link fw-semibold px-3 py-1 rounded-pill" href="/Oldalak/Termekek">Termékek</a>
                <a class="nav-link fw-semibold px-3 py-1 rounded-pill" href="/Oldalak/Regisztracio">Regisztráció</a>
            </nav>
            
            <div class="ms-auto d-flex align-items-center gap-2"> 
                <a class="btn btn-outline-dark rounded-circle d-grid place-items-center"
                   style="width:44px;height:44px" href="/Oldalak/Termekek">
                    🛒
                </a>
                <a class="btn btn-outline-dark rounded-circle d-grid place-items-center"
                   style="width:44px;height:44px" href="/Oldalak/Belepes">
                    👤
                </a>
            </div>
        </div>
    </div>
</header>

<main class="bg-white">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-5">

                <div class="text-center mb-4">
                    <h1 class="display-6 fw-bold">Belépés</h1>
                    <p class="text-secondary mb-0">Jelentkezz be a fiókodba.</p>
                </div>

                <div class="card shadow-sm border-2 rounded-4">
                    <div class="card-body p-4 p-md-5">

                        <form method="post" action="/Oldalak/Belepes">
                            
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Email cím</label>
                                <input name="Email" type="email"
                                       class="form-control form-control-lg rounded-3"
                                       placeholder="pl.: anna@email.com"
                                       required />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Jelszó</label>
                                <input name="Jelszo" type="password"
                                       class="form-control form-control-lg rounded-3"
                                       placeholder="********"
                                       required />
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit"
                                        class="btn btn-lg rounded-pill text-dark kalocsa-btn">
                                    Belépés
                                </button>

                                <a href="/Oldalak/Regisztracio"
                                   class="btn btn-outline-secondary rounded-pill">
                                    Nincs még fiókom
                                </a>
                            </div>
                        </form>

                        <hr class="my-4" />

                        <div class="text-center small">
                            <a href="/Oldalak/Kezdo" class="text-decoration-none fw-semibold">
                                ← Vissza a kezdőlapra
                            </a>
                        </div>

                    </div>
                </div>

                <div class="kalocsa-strip mt-3 rounded-pill"></div>

            </div>
        </div>
    </div>
</main>

<footer class="border-top bg-white">
    <div class="container py-4 text-center text-secondary">
        <div class="fw-semibold text-dark">Lábléc</div>
        <div class="small">© @DateTime.Now.Year Andika Vegyesbolt</div>
    </div>
</footer>

<style>
    :root{
        --k-red:   #d61f2c;
        --k-blue:  #1b63c6;
        --k-green: #2b8a3e;
        --k-yellow:#f2c21a;
        --k-pink:  #e83e8c;
    }

    .kalocsa-strip{
        height: 10px;
        background: linear-gradient(90deg,
            var(--k-red),
            var(--k-pink),
            var(--k-blue),
            var(--k-green),
            var(--k-yellow)
        );
        box-shadow: 0 8px 18px rgba(0,0,0,.07);
    }

    .kalocsa-btn{
        border: 2px solid rgba(0,0,0,.10);
        background: linear-gradient(90deg,
            rgba(214,31,44,.18),
            rgba(232,62,140,.16),
            rgba(27,99,198,.16),
            rgba(43,138,62,.16),
            rgba(242,194,26,.18)
        );
        box-shadow: 0 10px 22px rgba(0,0,0,.08);
        font-weight: 800;
    }

    .kalocsa-btn:hover{
        filter: brightness(1.02);
        transform: translateY(-1px);
    }

    .place-items-center{ place-items:center; }
</style>