@{
    ViewData["Title"] = "Kezdőlap";
}

<header class="site-header">
    <nav class="auth-links">
        <a href="/Oldalak/Belepes">Belépés</a>
        <a href="/Oldalak/Regisztracio">Regisztráció</a>
    </nav>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <header class="border-bottom bg-white sticky-top">
        <div class="container py-3">
            <div class="d-flex align-items-center gap-3">
                <a href="/Oldalak/Kezdo" class="text-decoration-none d-flex align-items-center gap-2">
                    <span class="fs-3">🌺</span>
                    <span class="fw-bold text-dark">Andika Vegyesbolt</span>
                </a>

                <nav class="mx-auto d-none d-md-flex gap-2 px-3 py-2 rounded-pill border shadow-sm bg-white">
                    <a class="nav-link fw-semibold px-3 py-1 rounded-pill" href="/Oldalak/Termekek">Termékek</a>
                    <a class="nav-link fw-semibold px-3 py-1 rounded-pill" href="/Oldalak/Termekek">Akciók</a>
                    <a class="nav-link fw-semibold px-3 py-1 rounded-pill" href="/Oldalak/Termekek">Újdonságok</a>
                    <a class="nav-link fw-semibold px-3 py-1 rounded-pill" href="#lablec">Kapcsolat</a>
                </nav>

                <div class="ms-auto d-flex align-items-center gap-2">
                    <a class="btn btn-outline-dark position-relative rounded-circle d-grid place-items-center"
                       style="width:44px;height:44px" href="/Oldalak/Termekek" title="Kosár">
                        🛒
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            1
                        </span>
                    </a>
                    <a class="btn btn-outline-dark rounded-circle d-grid place-items-center"
                       style="width:44px;height:44px" href="/Oldalak/Belepes" title="Fiók">
                        👤
                    </a>
                </div>
            </div>
        </div>
    </header>

    <div class="text-center">
        <h1 class="display-4">Üdvözlöm Andika vegyesboltjának a felületén</h1>
        <p><strong><a href="/Oldalak/Termekek">Termékeink</a></strong></p>
    </div>
    <section class="bg-white border-bottom">
        <div class="container py-3">
            <div class="d-flex align-items-center gap-2 mb-2">
                <div class="fw-bold ps-2 border-start border-4" style="border-left-color:#e83e8c !important;">Szűrők</div>
                <div class="ms-auto kalocsa-strip rounded-pill" style="width:140px;height:10px;"></div>
            </div>

            <div class="row g-2">
                <div class="col-12 col-md-5">
                    <input class="form-control form-control-lg rounded-pill shadow-sm" type="search" placeholder="Keresés termékre…" />
                </div>
                <div class="col-12 col-md-3">
                    <select class="form-select form-select-lg rounded-pill shadow-sm">
                        <option selected>Összes kategória</option>
                        <option>Élelmiszer</option>
                        <option>Ital</option>
                        <option>Háztartás</option>
                        <option>Higiénia</option>
                        <option>Vegyes</option>
                    </select>
                </div>
                <div class="col-12 col-md-3">
                    <select class="form-select form-select-lg rounded-pill shadow-sm">
                        <option selected>Rendezés: ajánlott</option>
                        <option>Ár szerint növekvő</option>
                        <option>Ár szerint csökkenő</option>
                        <option>Legújabb</option>
                    </select>
                </div>
                <div class="col-12 col-md-1 d-grid">
                    <button class="btn btn-lg rounded-pill text-dark kalocsa-btn">Szűrés</button>
                </div>
            </div>
        </div>
    </section>

    <main class="bg-white">
        <div class="container py-4">
            <div class="row g-4">
                <aside class="col-12 col-lg-3">
                    <div class="card shadow-sm border-2 rounded-4 sticky-lg-top" style="top: 120px;">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="fw-bold">Kategóriák</div>
                                <span class="kalocsa-dot" title="Kalocsai színek"></span>
                            </div>

                            <div class="kalocsa-strip mt-2 rounded-pill" style="height:10px;"></div>

                            <div class="list-group list-group-flush mt-3">
                                <a href="/Oldalak/Termekek" class="list-group-item list-group-item-action fw-semibold active-cat">Összes</a>
                                <a href="/Oldalak/Termekek" class="list-group-item list-group-item-action fw-semibold">Élelmiszer</a>
                                <a href="/Oldalak/Termekek" class="list-group-item list-group-item-action fw-semibold">Ital</a>
                                <a href="/Oldalak/Termekek" class="list-group-item list-group-item-action fw-semibold">Háztartás</a>
                                <a href="/Oldalak/Termekek" class="list-group-item list-group-item-action fw-semibold">Higiénia</a>
                                <a href="/Oldalak/Termekek" class="list-group-item list-group-item-action fw-semibold">Vegyes</a>
                            </div>
                        </div>
                    </div>
                </aside>

                <section class="col-12 col-lg-9">
                    <div class="d-flex flex-column flex-md-row align-items-md-end justify-content-between gap-2 mb-3">
                        <div>
                            <h1 class="h3 fw-bold mb-1">Üdvözlöm Andika vegyesboltjának a felületén</h1>
                            <div class="text-secondary">Válogass a termékek között, és tedd kosárba ami kell.</div>
                        </div>
                        <a href="/Oldalak/Termekek" class="btn btn-outline-dark rounded-pill px-4">
                            Összes termék
                        </a>
                    </div>

                    <div class="row g-3">
                        @for (int i = 1; i <= 12; i++)
                        {
                            <div class="col-12 col-sm-6 col-md-4 col-xl-3">
                                <div class="card h-100 shadow-sm border-2 rounded-4 product-card">
                                    <div class="product-thumb rounded-top-4" aria-hidden="true"></div>

                                    <div class="card-body d-flex flex-column gap-2">
                                        <div class="fw-bold">XY Termék @i</div>
                                        <div class="text-secondary fw-semibold">X Ft</div>

                                        <button class="btn rounded-pill text-dark kalocsa-btn mt-auto">
                                            🛒 Kosárba
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </section>
            </div>
        </div>
    </main>

    <footer class="border-top bg-white" id="lablec">
        <div class="container py-4 text-center text-secondary">
            <div class="fw-semibold text-dark">Lábléc</div>
            <div class="small">
                © @DateTime.Now.Year Andika Vegyesbolt — Kalocsai színvilág ihlette design.
                <span class="mx-2">•</span>
                <a class="text-decoration-none fw-semibold" href="/Oldalak/Belepes">Belépés</a>
                <span class="mx-2">•</span>
                <a class="text-decoration-none fw-semibold" href="/Oldalak/Regisztracio">Regisztráció</a>
            </div>
        </div>
    </footer>

    <!-- Stílus -->
    <style>
        .site-header {
            position: fixed;
            top: 0;
            right: 0;
            width: 100%;
            padding: 15px 30px;
            box-sizing: border-box;
        }

        : root
        {
            --k-red: #d61f2c;
            --k-blue: #1b63c6;
            --k-green: #2b8a3e;
            --k-yellow: #f2c21a;
            --k-pink: #e83e8c;
        }

        .kalocsa-strip {
            background: linear-gradient(90deg, var(--k-red), var(--k-pink), var(--k-blue), var(--k-green), var(--k-yellow) );
            box-shadow: 0 8px 18px rgba(0,0,0,.07);
        }

        .kalocsa-btn {
            border: 2px solid rgba(0,0,0,.10);
            background: linear-gradient(90deg, rgba(214,31,44,.18), rgba(232,62,140,.16), rgba(27,99,198,.16), rgba(43,138,62,.16), rgba(242,194,26,.18) );
            box-shadow: 0 10px 22px rgba(0,0,0,.08);
            font-weight: 800;
        }

            .kalocsa-btn:hover {
                filter: brightness(1.02);
                transform: translateY(-1px);
            }

        .place-items-center {
            place-items: center;
        }

        .auth-links {
            display: flex;
            justify-content: flex-end;
            gap: 20px;
        }

        .active-cat
        {
            border-radius: 14px !important;
            margin-bottom: 6px;
            border: 2px solid rgba(214,31,44,.25) !important;
            background: rgba(214,31,44,.06) !important;
            color: #1d1d1d !important;
        }

        .list-group-item {
            border: 0;
            border-radius: 14px;
            margin-bottom: 6px;
        }

        .product-thumb {
            height: 160px;
            border-bottom: 2px solid rgba(0,0,0,.08);
            background: radial-gradient(circle at 20% 30%, rgba(214,31,44,.10) 0 40px, transparent 41px), radial-gradient(circle at 75% 35%, rgba(27,99,198,.10) 0 46px, transparent 47px), radial-gradient(circle at 40% 80%, rgba(43,138,62,.10) 0 50px, transparent 51px), radial-gradient(circle at 80% 80%, rgba(242,194,26,.12) 0 44px, transparent 45px), radial-gradient(circle at 50% 50%, rgba(232,62,140,.10) 0 52px, transparent 53px), #fff;
        }

        .auth-links a {
            font-weight: bold;
            text-decoration: none;
            color: #007bff;
        }
        
        .product-card:hover
        {
            transform: translateY(-2px);
            transition: transform .12s ease;
        }

        .auth-links a:hover {
            text-decoration: underline;
        }
        .kalocsa-dot
        {
            width: 14px;
            height: 14px;
            border-radius: 999px;
            background: var(--k-pink);
            box-shadow: 0 0 0 4px rgba(232,62,140,.12);
            display: inline-block;
        }
    </style>
